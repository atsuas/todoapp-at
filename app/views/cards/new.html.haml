.container
  %h2 New card
  %ul
    - @card.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @card, url: article_cards_path(@card.article), local: true) do |f|
    %div
      = f.label :eyecatch, 'eyecatch'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    = f.submit 'Submit', class: 'btn-primary'