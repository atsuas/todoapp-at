.container
  %ul
    - @card.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @card, url: article_cards_path(@card.article), local: true) do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'New Card'
    %div
      = f.text_area :content
    = f.submit 'submit', class: 'text'